<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_payment_confirmation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gilbertojimenezorench.myapp.PaymentConfirmationActivity"
    android:background="@drawable/back">

    <TextView
        android:text="Payment Authorized"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:id="@+id/authorizedTextView"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <TextView
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardNumTextView"
        android:layout_alignBaseline="@+id/cardTextView"
        android:layout_alignBottom="@+id/cardTextView"
        android:layout_alignEnd="@+id/authorizedTextView"
        android:layout_toEndOf="@+id/cardTextView"
        tools:text="xxxxxxxxxxxx3030" />

    <TextView
        android:text="Carlos Santiago"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fullNameTextView"
        android:layout_alignBaseline="@+id/pnameTextView"
        android:layout_alignBottom="@+id/pnameTextView"
        android:layout_alignEnd="@+id/cardNumTextView"
        android:layout_toEndOf="@+id/cardTextView" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:id="@+id/cardTextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        tools:text="Card:    "
        android:layout_below="@+id/authorizedTextView"
        android:layout_alignStart="@+id/authorizedTextView" />

    <TextView
        android:text="Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:id="@+id/pnameTextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_above="@+id/cardNumTextView"
        android:layout_alignStart="@+id/cardTextView" />

    <TextView
        android:text="Amount:   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardTextView"
        android:layout_alignStart="@+id/cardTextView"
        android:layout_marginTop="11dp"
        android:id="@+id/amountTextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <TextView
        android:text="$1.00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totalTextView"
        android:layout_alignBaseline="@+id/amountTextView"
        android:layout_alignBottom="@+id/amountTextView"
        android:layout_toEndOf="@+id/amountTextView"
        android:textColor="#FFFFFF"/>

    <TextView
        android:text="10/15/2016"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/actualDateTextView"
        android:layout_alignBaseline="@+id/dateTextView"
        android:layout_alignBottom="@+id/dateTextView"
        android:layout_toEndOf="@+id/dateTextView"
        android:textColor="#FFFFFF"/>

    <TextView
        android:text="Date:   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/dateTextView"
        android:textSize="18sp"
        android:layout_below="@+id/amountTextView"
        android:layout_alignStart="@+id/amountTextView"
        android:textColor="#FFFFFF"/>

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/closingBtn"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
